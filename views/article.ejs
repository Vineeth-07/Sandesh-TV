<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      .article-container {
        position: relative;
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        box-shadow: 20px 20px 60px #00000041, inset -20px -20px 60px #ffffff40;
        /* Light gray background color */
      }

      .article-image {
        position: relative;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 20px 20px 60px #00000041, inset -20px -20px 60px #ffffff40;
      }

      .article-image img {
        width: 100%;
        height: auto;
        border-radius: 8px;
      }

      .no-image {
        text-align: center;
        padding: 20px;
        background-color: gray;
        border-radius: 8px;
      }

      .navigation-links {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
      }

      .navigation-links button {
        background-color: #14b8a6;
        color: #fff;
        padding: 10px 20px;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        box-shadow: 20px 20px 60px #00000041, inset -20px -20px 60px #ffffff40;
      }
      .navigation-links a {
        color: #fff;
        padding: 10px 20px;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .navigation-links button:hover {
        background-color: #0d9488;
      }

      .zoom-buttons {
        position: absolute;
        top: 18px;
        right: 10px;
        margin: 10px;
        transform: translate(-50%, -50%);
        display: flex;
        justify-content: space-between;
        width: 40px;
        z-index: 1;
      }
      .zoom-buttons button {
        /* color: #fff; */
        padding: 5px;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        background-color: gray;
      }

      .zoom-buttons button:hover {
        background-color: #555;
      }
    </style>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Mandali:wght@400&display=swap"
    />
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        let zoomLevel = 1;
        let offsetX = 0;
        let offsetY = 0;

        const articleImg = document.getElementById("article-img");

        document
          .getElementById("zoom-in")
          .addEventListener("click", function () {
            zoomLevel += 0.1;
            applyTransform();
          });

        document
          .getElementById("zoom-out")
          .addEventListener("click", function () {
            if (zoomLevel > 0.2) {
              zoomLevel -= 0.1;
              applyTransform();
            }
          });

        function applyTransform() {
          if (zoomLevel === 1) {
            offsetX = 0;
            offsetY = 0;
          }
          articleImg.style.transform = `scale(${zoomLevel}) translate(${offsetX}px, ${offsetY}px)`;
        }

        let isDragging = false;
        let startX, startY;

        articleImg.addEventListener("mousedown", (e) => {
          isDragging = true;
          startX = e.clientX - offsetX;
          startY = e.clientY - offsetY;
        });

        document.addEventListener("mousemove", (e) => {
          if (!isDragging) return;
          offsetX = e.clientX - startX;
          offsetY = e.clientY - startY;
          applyTransform();
        });

        document.addEventListener("mouseup", () => {
          isDragging = false;
        });
      });

      document.addEventListener("DOMContentLoaded", function () {
        const whatsappShare = document.getElementById("whatsapp-share");
        const facebookShare = document.getElementById("facebook-share");
        const twitterShare = document.getElementById("twitter-share");
        const articleTitle = "<%= encodeURIComponent(article.title) %>";
        const articleUrl = window.location.href;

        whatsappShare.href = `whatsapp://send?text=Check out this article: ${articleTitle} - ${articleUrl}`;
        facebookShare.href = `https://www.facebook.com/sharer/sharer.php?u=${articleUrl}`;
        twitterShare.href = `https://twitter.com/intent/tweet?text=Check out this article: ${articleTitle}&url=${articleUrl}`;
      });
    </script>
  </head>

  <body>
    <%- include('header.ejs') %> <%- include("navBar.ejs")%>
    <br />
    <div
      class="grid grid-rows-1 gap-2"
      style="display: flex; justify-content: center; align-items: center"
    >
      <div
        class="share-buttons flex row-start-1 flex justify-end items-center space-x-2"
        style="display: flex; justify-content: center; align-items: center"
      >
        <span
          class="text-xl mb-2"
          style="font-size: 17px; font-weight: 600; margin-right: 20px"
        >
          Share on :
        </span>
        <a
          href="https://wa.me/?text=<%= encodeURIComponent(article.title) %> - <%= encodeURIComponent(articleUrl) %>"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            fill="currentColor"
            class="bi bi-whatsapp"
            viewBox="0 0 16 16"
            style="margin-right: 20px"
          >
            <path
              d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.9 7.9 0 0 0 13.6 2.326zM7.994 14.521a6.6 6.6 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.56 6.56 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592m3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.73.73 0 0 0-.529.247c-.182.198-.691.677-.691 1.654s.71 1.916.81 2.049c.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232"
            />
          </svg>
        </a>
        <a
          href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(articleUrl) %>"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            fill="currentColor"
            class="bi bi-facebook"
            viewBox="0 0 16 16"
            style="margin-right: 20px"
          >
            <path
              d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951"
            />
          </svg>
        </a>
        <a
          href="https://twitter.com/intent/tweet?url=<%= encodeURIComponent(articleUrl) %>&text=<%= encodeURIComponent(article.title) %>"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            fill="currentColor"
            class="bi bi-twitter-x"
            viewBox="0 0 16 16"
            style="margin-right: 20px"
          >
            <path
              d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z"
            />
          </svg>
        </a>
      </div>
    </div>
    <div class="article-container bg-white rounded-lg">
      <p
        class="tracking-light"
        style="
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          overflow: hidden;
          font-family: 'Mandali', sans-serif;
          font-size: 24px;
        "
      >
        <span
          class="font-bold"
          style="color: rgb(44, 52, 155); font-size: 24px"
        >
          <%= article.title %>
        </span>
      </p>
      <% let date=new Date(article.date); %> <% let
      formattedDate=date.toLocaleDateString('en-US', { month: 'long' , day:
      'numeric' , year: 'numeric' }); %>
      <div class="flex">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="white"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z"
          />
        </svg>
        <%= formattedDate %>
      </div>

      <br />
      <% if (article.images) { %>
      <div class="article-image">
        <div class="zoom-buttons">
          <button id="zoom-in" class="rounded-lg mr-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="black"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607ZM10.5 7.5v6m3-3h-6"
              />
            </svg>
          </button>
          <button id="zoom-out" class="rounded-lg">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="black"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607ZM13.5 10.5h-6"
              />
            </svg>
          </button>
        </div>
        <img
          id="article-img"
          src="/uploads/<%= article.images.filename %>"
          alt="<%= article.images.filename %>"
        />
      </div>
      <% } else { %>
      <div class="no-image">
        <span>No Image</span>
      </div>
      <% } %>
      <div class="navigation-links">
        <% if (prevIndex !==null) {%>
        <button>
          <a href="/epaper/<%=state%>/<%=stack[prevIndex].id%>"> Previous </a>
        </button>
        <% }%> <% if (nextIndex !==null) {%>
        <button>
          <a href="/epaper/<%=state%>/<%= stack[nextIndex].id%>"> Next </a>
        </button>
        <%} %>
      </div>
    </div>
  </body>
</html>
