
<div class="container mx-auto px-4">
    <div class="flex flex-col sm:flex-row gap-8 grid grid-cols-2 grid-rows-2">
      <% const latestImages = {}; %>
  
      <% for (let i = 0; i < articles.length; i++) { %>
          <% const category = articles[i].category; %>
  
          <% if (!latestImages[category] || latestImages[category].date < articles[i].date) { %>
              <% latestImages[category] = {
                  date: articles[i].date,
                  image: articles[i].images
                      ? articles[i].images.filename
                      : null
              }; %>
          <% } %>
      <% } %>
  
      <% Object.keys(latestImages).forEach(category => { %>
          <a href="/<%= category %>">
              <div class="p-4 border border-gray-300 rounded-md h-64">
                  <h2 class="p-2 text-xl sm:text-2xl"><%= category.toUpperCase() %></h2>
  
                  <% if (latestImages[category].image) { %>
                      <div class="image-container h-40">
                          <img class="object-fit: contain object-cover w-full h-full rounded-md overflow-hidden"  src="/uploads/<%= latestImages[category].image %>"
                               alt="<%= latestImages[category].image %>">
                      </div>
                  <% } %>
              </div>
          </a>
      <% }) %>
    </div>
  </div>