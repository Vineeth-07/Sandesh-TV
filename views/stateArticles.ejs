<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Add your head content here -->
</head>

<body>
  <%- include('header.ejs') %>

  <h1><%= state.toUpperCase() %> News</h1>

  <div class="flex-container p-4">
    <% for (let i = 0; i < articles.length; i++) { %>
      <div class="article-box rounded">
        <% const article = articles[i]; %>

        <% if (article.images) { %>
          <div class="article-image">
            <a href="/epaper/<%= article.state %>/<%= article.id %>">
              <img src="/uploads/<%= article.images.filename %>"
                 alt="<%= article.images.filename %>">
            </a>
          </div>
        <% } else { %>
          <div class="no-image">
            <span>No Image</span>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

</body>

</html>
