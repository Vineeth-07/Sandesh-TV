<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Add your head content here -->
  <style>
    body {
      margin: 0;
      padding: 0;
    }

    .flex-container {
      display: flex;
      flex-wrap: wrap;
      gap: 16px;
      justify-content: center;
    }

    .article-box {
      width: 300px; /* Set your preferred width */
      border: 1px solid #ddd;
      padding: 8px;
      margin: 8px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      height: 400px; /* Set your preferred height */
    }

    .article-box h2 {
      font-size: 1rem;
      margin-bottom: 8px;
    }

    .article-image {
      flex-grow: 1;
    }

    .article-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 4px;
    }

    .no-image {
      flex-grow: 1;
      background-color: #eee;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 4px;
    }
  </style>
</head>

<body>
  <%- include('header.ejs') %>

  <h1><%= state.toUpperCase() %> News</h1>

  <div class="flex-container p-4">
    <% for (let i = 0; i < articles.length; i++) { %>
      <div class="article-box rounded">
        <% const article = articles[i]; %>

        <% if (article.images) { %>
          <div class="article-image">
            <a href="/epaper/<%= article.state %>/<%= article.id %>">
              <img src="/uploads/<%= article.images.filename %>"
                 alt="<%= article.images.filename %>">
            </a>
          </div>
        <% } else { %>
          <div class="no-image">
            <span>No Image</span>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

</body>

</html>
