<div class="flex justify-center">
    <div class="flex gap-10">
    <div class="p-4 border border-gray-300 h-80 w-80 flex flex-col ">
        <h2 class="text-xl mb-2">Telangana</h2>
        <% const telanganaArticles = articles.filter(article => article.state === 'telangana'); %>
        <% const latestTelanganaArticle = telanganaArticles.length > 0 ? telanganaArticles.reduce((prev, current) => (prev.date > current.date) ? prev : current) : null; %>
        <% if (latestTelanganaArticle) { %>
            <a href="/epaper/<%= latestTelanganaArticle.state %>">
                <h3 class="text-xl mb-2"><%= latestTelanganaArticle.title %></h3>
                <div class="article-image flex-grow overflow-hidden max-h-48">
                    <% if (latestTelanganaArticle.images && latestTelanganaArticle.images.filename) { %>
                        <img class="w-full h-full object-cover" src="/uploads/<%= latestTelanganaArticle.images.filename %>" alt="<%= latestTelanganaArticle.images.filename %>">
                    <% } else { %>
                        <div class="flex items-center justify-center h-full bg-gray-200">
                            <span>No Image</span>
                        </div>
                    <% } %>
                </div>
            </a>
        <% } %>
    </div>
