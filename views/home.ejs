<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"/>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <style>
        /* Custom styles for centering and resizing the slider */
        .swiper-container {
            width: 50%; /* Adjust as needed */
            height: 300px; /* Adjust the height as needed */
            margin: auto; /* Center the slider */
            position: relative; /* Position for absolute navigation buttons */
            overflow: hidden; /* Hide overflow to prevent next/prev images from being visible */
        }

        .swiper-slide {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column; /* Adjust to stack content vertically */
            text-align: center; /* Center text */
        }

        .swiper-slide img {
            max-width: 100%; /* Make the image fill the slide */
            max-height: 100%; /* Make the image fill the slide */
            width: auto; /* Maintain aspect ratio */
            height: auto; /* Maintain aspect ratio */
        }

        .swiper-button-next,
        .swiper-button-prev {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 40px;
            height: 40px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1; /* Ensure buttons appear above the image */
            transition: background-color 0.3s;
        }

        .swiper-button-next:hover,
        .swiper-button-prev:hover {
            background-color: rgba(0, 0, 0, 0.5); /* Change background color on hover */
        }

        .swiper-button-next::after,
        .swiper-button-prev::after {
            font-size: 1.8rem;
            color: #333; /* Adjust the color as needed */
        }

        .swiper-button-prev::after {
            content: '\2039'; /* Unicode character for left-pointing arrow */
        }

        .swiper-button-next::after {
            content: '\203A'; /* Unicode character for right-pointing arrow */
        }

        .swiper-button-prev {
            left: 10px;
        }

        .swiper-button-next {
            right: 10px;
        }
    </style>
</head>
<body>
    <%- include('header.ejs') %>
    <div class="p-4 bg-white text-black text-sm flex border border-black items-center">
        <div class="relative group flex">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <div class="absolute hidden bg-white border border-black mt-2 py-2 space-y-2 group-hover:block rounded">
                <div class="px-4 py-2 hover:bg-gray-100 rounded">
                    <a href="#">Movies</a>
                </div>
                <div class="px-4 py-2 hover:bg-gray-100 rounded">
                    <a href="#">Sports</a>
                </div>
                <div class="px-4 py-2 hover:bg-gray-100 rounded">
                    <a href="#">Business</a>
                </div>
            </div>
        </div>
        <div class="border p-2 mx-4">
            <a href="/" class="font-bold">Home</a>
        </div>
        <div class="border p-2 mr-4">
            <a href="/" class="font-bold">News</a>
        </div>
        <div class="border p-2 mr-4">
            <a href="/" class="font-bold">About us</a>
        </div>
        <div class="border p-2">
            <a href="/e-paper" class="font-bold">Epaper</a>
        </div>
    </div>
    <div>
        <a href="/createnews">
            Create news
        </a>
    </div>
    <!-- Swiper Slider -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <% todaysNews.forEach(news => { %>
                <div class="swiper-slide">
                    <a href="/news/<%=news.id%>">
                        <img src="/uploads/<%= news.image.filename %>" alt="<%= news.title %>">
                    </a>
                </div>
            <% }) %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>

    <div class="divide-y divide-dotted">
        <%- include('newsListItems') %>
    </div>

    <!-- Scripts -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var mySwiper = new Swiper('.swiper-container', {
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                autoplay:{
                    delay:1000
                }
            });
        });
    </script>
</body>
</html>
