    <style>
        /* Custom styles for centering and resizing the slider */
        .swiper-container {
            width: 50%; /* Adjust as needed */
            height: 300px; /* Adjust the height as needed */
            margin: auto; /* Center the slider */
            position: relative; /* Position for absolute navigation buttons */
            overflow: hidden; /* Hide overflow to prevent next/prev images from being visible */
        }
        @media (max-width: 640px) {
            .swiper-container {
                width: 100%;
            }
        }
        .swiper-slide {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column; /* Adjust to stack content vertically */
            text-align: center; /* Center text */
        }
        .swiper-slide img {
            /* max-width: 100%;
            max-height: 100%; 
            width: auto; 
            height: auto;  */
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
        .swiper-button-next,
        .swiper-button-prev {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 40px;
            height: 40px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1; /* Ensure buttons appear above the image */
            transition: background-color 0.3s;
        }
        .swiper-button-next:hover,
        .swiper-button-prev:hover {
            background-color: rgba(0, 0, 0, 0.5); /* Change background color on hover */
        }
        .swiper-button-next::after,
        .swiper-button-prev::after {
            font-size: 1.8rem;
            color: #333; /* Adjust the color as needed */
        }
        .swiper-button-prev::after {
            content: '\2039'; /* Unicode character for left-pointing arrow */
        }
        .swiper-button-next::after {
            content: '\203A'; /* Unicode character for right-pointing arrow */
        }
        .swiper-button-prev {
            left: 10px;
        }
        .swiper-button-next {
            right: 10px;
        }
        .group:hover .hidden {
            display: block;
        }
        #container{
            display: flex;
            flex-direction: column;
            border: 1px solid red;
            width: 200px;
            height: auto;
            border-radius: 10px;
            background: #FFF;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 4px 10px 1px rgba(0,0,0,0.2);
        }
        .sidebar{
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 64px; /* Set your preferred width */
            background-color: #ffffff; /* Add your preferred background color */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 2;
        }
        .sidebar.open{
            display:block
        }
        .content-container {
            transition: margin-left 0.3s ease;
            margin-left: 0;
            z-index: 1; /* Adjust the margin to match the sidebar width */
        }
        body{
            margin: 0;
            padding: 0;
            /* overflow: hidden; */
        }
        @media (max-width: 640px) {
        .sidebar {
            display: none; /* Hide the sidebar on small screens by default */
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%; /* Make the sidebar full width on small screens */
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 2;
        }

        .sidebar.open {
            display: block;
        }

        .content-container {
            margin-left: 0; /* Adjust the margin to avoid overlaying content */
        }
    }
    </style>
</head>
